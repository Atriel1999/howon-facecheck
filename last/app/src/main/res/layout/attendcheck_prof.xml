<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_weight="4">

    <TextView
        android:id="@+id/study_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Study Name"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_weight="1"
        android:background="#e6e6e6"></TextView>

    <TextView
            android:id="@+id/profname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="professor name"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="#e6e6e6"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="강의코드"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#e6e6e6"></TextView>


    <TextView
        android:id ="@+id/lecture_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6B46M"
        android:textColor="#000000"
        android:textSize="45dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="#e6e6e6"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/attend_info_prof"
            android:layout_width="380dp"
            android:layout_height="450dp"
            android:layout_marginTop="10dp"
            android:text="정보 읽기 실패"
            android:textColor="#000000"
            android:scrollbars="vertical"
            android:scrollbarFadeDuration="0"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarThumbVertical="@color/black"
            android:scrollbarTrackVertical="@color/white"
            android:scrollbarSize="2dp"
            android:textSize="17dp"
            android:layout_weight="6"
            ></TextView>

        <Button
            android:id="@+id/btnback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="돌아가기"
            android:textColor="@android:color/background_dark"
            ></Button>

    </LinearLayout>
</LinearLayout>